<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".system.MainActivity">

    <ImageView
        android:id="@+id/imageFoneAct1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:foregroundGravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/picture_fone" />

    <ImageView
        android:id="@+id/imageClipart"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:foregroundGravity="right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/clipart" />

    <Button
        android:id="@+id/buttonStart"
        style="@style/TextAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30sp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/rubik_mono_one"
        android:text="@string/buttonStart"
        android:textAllCaps="false"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageFoneAct1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/withText"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageEarth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40sp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/picture_earth" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/imageEarth"
                    android:layout_marginTop="-400sp">

                    <ImageView
                        android:id="@+id/imageCloud2Act1"
                        android:layout_width="100dp"
                        android:layout_height="196dp"
                        android:layout_below="@+id/imageCloud3Act1"
                        android:layout_marginTop="-150dp"
                        android:adjustViewBounds="true"
                        android:foregroundGravity="center"
                        app:srcCompat="@drawable/picture_cloud" />

                    <ImageView
                        android:id="@+id/imageCloud3Act1"
                        android:layout_width="250dp"
                        android:layout_height="216dp"
                        android:layout_below="@+id/imageCloudAct1"
                        android:layout_marginTop="-400dp"
                        android:adjustViewBounds="true"
                        android:foregroundGravity="center"
                        app:srcCompat="@drawable/picture_cloud" />

                    <ImageView
                        android:id="@+id/imageCloudAct1"
                        android:layout_width="150dp"
                        android:layout_height="216dp"
                        android:layout_marginTop="200dp"
                        android:adjustViewBounds="true"
                        android:foregroundGravity="center"
                        app:srcCompat="@drawable/picture_cloud" />

                    <EditText
                        android:id="@+id/textNamePlayer"
                        android:layout_width="match_parent"
                        android:layout_height="80sp"
                        android:layout_marginStart="5sp"
                        android:ems="10"
                        android:textStyle="bold"
                        android:fontFamily="@font/rubik_mono_one"
                        android:inputType="textPersonName"
                        android:hint="@string/enterYourName"
                        android:textColorHint="@color/nameApp"
                        style="@style/TextAppName"
                        android:visibility="invisible"
                        android:background="@android:color/transparent"
                        android:textSize="30sp"/>

                    <EditText
                        android:id="@+id/textPassword"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginStart="5sp"
                        android:textStyle="bold"
                        android:ems="10"
                        android:visibility="invisible"
                        style="@style/TextAppName"
                        android:fontFamily="@font/rubik_mono_one"
                        android:inputType="textPassword"
                        android:textColorHint="@color/nameApp"
                        android:hint="@string/enterYourPassword"
                        android:layout_below="@id/textNamePlayer"
                        android:background="@android:color/transparent"
                        android:textSize="30sp"/>

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/withText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/applicationName"
                style="@style/TextAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginRight="5sp"
                android:fontFamily="@font/bowlby_one"
                android:gravity="center"
                android:text="@string/app_name"
                android:textSize="65sp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>