<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialogwindow.DialogWindowBioEasyDiagram">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="120sp"
        android:layout_marginBottom="80sp"
        android:background="@drawable/style_dialog_window"
        >

        <ImageView
            android:id="@+id/imageFoneDialogWindow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:background="@drawable/fone_easy_act"
            android:cropToPadding="false"
            android:foregroundGravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/MathlevelEasyRestart"
                    style="@style/TextAppName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:fontFamily="@font/rubik_mono_one"
                    android:foregroundGravity="left"
                    android:gravity="center"
                    android:text="@string/diagram"
                    android:textColor="@color/nameApp"
                    android:textSize="100sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50sp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/levels"
                            style="@style/TextAppName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/rubik_mono_one"
                            android:foregroundGravity="left"
                            android:gravity="left"
                            android:text="@string/totalLevels"
                            android:textColor="@color/nameApp"
                            android:textSize="80sp" />

                        <TextView
                            android:id="@+id/totalLevels"
                            style="@style/levelEasySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5sp"
                            android:layout_weight="3"
                            android:fontFamily="@font/rubik_mono_one"
                            android:foregroundGravity="left"
                            android:gravity="right"
                            android:text="20"
                            android:textColor="@color/nameApp"
                            android:textSize="80sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text1"
                            style="@style/TextAppName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_weight="1"
                            android:fontFamily="@font/rubik_mono_one"
                            android:foregroundGravity="left"
                            android:gravity="left"
                            android:text="@string/decided"
                            android:textColor="@color/nameApp"
                            android:textSize="80sp" />

                        <TextView
                            android:id="@+id/Biodecided"
                            style="@style/levelEasySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="5sp"
                            android:layout_weight="2"
                            android:fontFamily="@font/rubik_mono_one"
                            android:foregroundGravity="left"
                            android:gravity="right"

                            android:text="X"
                            android:textColor="@color/nameApp"
                            android:textSize="80sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text3"
                            style="@style/TextAppName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_weight="1"
                            android:fontFamily="@font/rubik_mono_one"
                            android:foregroundGravity="left"
                            android:gravity="left"
                            android:text="@string/errors"
                            android:textColor="@color/nameApp"
                            android:textSize="80sp" />

                        <TextView
                            android:id="@+id/Bioerrors"
                            style="@style/levelEasySmall"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10sp"
                            android:layout_marginEnd="5sp"
                            android:layout_weight="2"
                            android:fontFamily="@font/rubik_mono_one"
                            android:foregroundGravity="left"
                            android:gravity="right"

                            android:text="X"
                            android:textColor="@color/nameApp"
                            android:textSize="80sp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>