<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialogwindow.DialogWindowGeoHardRestart">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="120sp"
        android:layout_marginBottom="80sp"
        android:background="@drawable/style_dialog_window_hard"
        >

        <ImageView
            android:id="@+id/imageFoneDialogWindow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:background="@drawable/picture_dialog_fone_hard"
            android:cropToPadding="false"
            android:foregroundGravity="center"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foregroundGravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/GeolevelEasyRestart"
                    style="@style/TextAppName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50sp"
                    android:fontFamily="@font/rubik_mono_one"
                    android:foregroundGravity="left"
                    android:gravity="center"
                    android:text="@string/restart"
                    android:textColor="@color/hard"
                    android:textSize="100sp" />

                <LinearLayout
                    android:layout_marginTop="50sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/GeolevelHardRestartYes"
                            android:layout_width="60sp"
                            android:layout_height="160sp"
                            android:layout_marginTop="10sp"
                            android:layout_weight="1"
                            android:layout_marginLeft="2sp"
                            android:layout_marginRight="2sp"
                            android:fontFamily="@font/rubik_mono_one"
                            android:background="@drawable/style_buttons_math_hard"
                            android:gravity="center"
                            android:text="@string/yes"
                            android:textColor="@color/black"
                            android:textSize="90sp" />

                        <TextView
                            android:id="@+id/GeolevelHardRestartNo"
                            android:layout_width="60sp"
                            android:layout_height="160sp"
                            android:layout_weight="1"
                            android:layout_marginTop="10sp"
                            android:layout_marginLeft="2sp"
                            android:layout_marginRight="2sp"
                            android:background="@drawable/style_buttons_math_hard"
                            android:fontFamily="@font/rubik_mono_one"
                            android:gravity="center"
                            android:text="@string/no"
                            android:textColor="@color/black"
                            android:textSize="90sp" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>